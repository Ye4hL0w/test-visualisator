            "domain": ["protein", "metabolite", "pathway"],
            "range": "Set1"
          }
        },
        "size": {
          "field": "degree",
          "scale": {
            "type": "linear",
            "domain": [1, 50],
            "range": [5, 30]
          }
        }
      },
      "links": {
        "color": {
          "field": "confidence",
          "scale": {
